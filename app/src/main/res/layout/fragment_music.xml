<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/musicFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/musicTab">
        <com.google.android.material.tabs.TabItem
                android:icon="@drawable/ic_round_face_24px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <com.google.android.material.tabs.TabItem
                android:icon="@drawable/ic_round_favorite_24px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <com.google.android.material.tabs.TabItem
                android:icon="@drawable/ic_round_bookmarks_24px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
            android:id="@+id/musicViewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/musicTab">

    </androidx.viewpager.widget.ViewPager>

</androidx.constraintlayout.widget.ConstraintLayout>